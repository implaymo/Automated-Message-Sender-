<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>


<VBox styleClass="main-container" stylesheets="styles.css" fx:id="mainContainer" alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sendit.PrimaryController">
   <!-- Centered Button at the top -->
   <fx:include source="navigationbar.fxml"/>
   <children>
      <Button prefWidth="50" text="New" fx:id="plusButton" onAction="#plusButton" />
   </children>
   <!-- Horizontal Box for TextFields -->
   <HBox fx:id="container" spacing="10.0" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
      <children>
         <TextField fx:id="smallInput" promptText="Small Input" prefWidth="50.0" />
         <TextField fx:id="largeInput" promptText="Large Input" prefWidth="200.0" />
         <Button text="✖️" fx:id="deleteButton" />
      </children>
   </HBox>
   <!-- Padding for the VBox -->
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
